@import './vendor/style/normalize.css'

ul,li
  margin 0
  padding 0

body
  font-family "open sans","DIN Next Ultra Light","Helvetica Neue",Helvetica, "Lantinghei SC","Hiragino Sans GB",STHeiti, "Noto Sans S Chinese", "Microsoft Yahei", "Microsoft Sans Serif", "WenQuanYi Micro Hei",sans-serif
  overflow-x hidden
  -webkit-font-smoothing antialiased
  font-size 16px
  &.modal-on
    overflow-y hidden
.tac
  text-align center
.section-title
  font-weight bold
  font-size 1.8rem
  letter-spacing 1px
  display inline-block
  color #4c5257

$container-width = 1000px
$unit = $container-width/12

countGrid($container-width)
  $unit = $container-width/12
  .container
    width $container-width
    .six
      width $unit*6
    .five
      width $unit*5
    .four
      width $unit*4
    .offset-one
      margin-left $unit

.container
  width $container-width
  margin-left auto
  margin-right auto
  .column
    display inline-block
    margin-left -4px
    vertical-align top
    box-sizing border-box
countGrid($container-width)

@media screen and (max-width: 1100px)
  countGrid(800px)
@media screen and (max-width: 850px)
  countGrid(100%)
@media screen and (max-width: 768px)
  .container
    .column
      padding 15px
      box-sizing border-box
      width 100% !important
    .offset-one
      margin-left 0
