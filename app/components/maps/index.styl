.map-container
  position relative
  background-color #efefef
  height 0
  padding-bottom 35%

.map-info-cover
  position absolute
  width 500px
  top 50%
  left 50%
  transform translate(-80%, -50%)
  z-index 200
  background-color #fff
  box-shadow 0 5px 10px rgba(0,0,0,0.1)

  img
    width 100%

  .location
    padding 10px 20px

.static-map
  img
    width 100%

@media screen and (max-width: 1080px)
  .map-info-cover
    display none

.hidden-pc
  display none

@media screen and (max-width: 720px)
  .hidden-mobile
    display none
  .hidden-pc
    display block
