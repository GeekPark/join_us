$color-modal = #1E5A77
.modal-wrap
  display none
.modal-bg
  position fixed
  background-color rgba(0,0,0,0.6)
  left 0
  top 0
  width 100%
  height 100%
  opacity 0
  display none
  z-index 3
  transition opacity .2s
.modal-show
  opacity 1
  display block
.modal-bg.show
  display block
  opacity 1

$dialog-w = 680px
$dialog-h = 450px
.modal-dialog
  position fixed
  display block
  z-index 11
  width $dialog-w
  background-color #fff
  margin-left -($dialog-w/2)
  height $dialog-h
  border-radius 3px
  left 50%
  top 50%
  transform translateY(-50%)
.modal-job-list
  overflow-y auto
  margin-top 20px
  height $dialog-h - 140px
  padding 0 20px 5px 20px
  border 1px dashed #aeaeae
  h4
    margin 10px 0
  li
    padding-left 5px
    border-left 3px solid #ddd
    margin-bottom 10px
    list-style-type none
    font-size 0.9rem
    color #555
.modal-container
  padding 12px 15px
  position relative
.modal-title
  margin 0
  font-size 1.5rem
  color $color-modal
.modal-close
  position absolute
  font-size 1.5rem
  color $color-modal
  right 15px
  top 10px
  cursor pointer
.modal-item
  display none
  &.show
    display block
.modal-mailto
  display inline-block
  color #fff
  padding 8px 20px
  text-decoration none
  background-color #3BA1F5
  border 1px solid #1481DB
  letter-spacing 1px
  border-radius 3px
  margin-top 10px
@media screen and (max-width: 850px)
  .modal-dialog
    margin 5%
    width 90%
    height 90%
    left 0
    top 0
    transform none
  .modal-title
   max-width 85%
